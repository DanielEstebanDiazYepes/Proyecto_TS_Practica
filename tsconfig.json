{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@server/*": ["server/src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["server/src/**/*", "shared/**/*", "server/src/index.ts"],
  "exclude": ["node_modules", "dist"]
}